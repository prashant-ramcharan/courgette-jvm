<div class="row">
  {{#step_output_before}}
        <div class="mt-3 col-lg-12 text-info" style="overflow-wrap:break-word;">
            {{#output}}
              <div>
                {{{.}}}
              </div>
            {{/output}}
        </div>
    {{/step_output_before}}

   {{#step_embedding_text_before}}
      {{#text}}
        <div class="mt-3 col-lg-12">
            {{{.}}}
        </div>
      {{/text}}
   {{/step_embedding_text_before}}

   {{#step_embedding_image_before}}
        {{#img_id}}
            <div class="mt-3 col-lg-12">
                <img id={{.}} src="" class="img-thumbnail">
            </div>
        {{/img_id}}
   {{/step_embedding_image_before}}

    <div class="col-lg-9" style="overflow-wrap:break-word;">
        {{step_keyword}} {{step_name}}
    </div>

    <div class="col-lg-3">
         <span class="float-right">
         <span class="badge badge-info">{{step_duration}} ms</span>
         <span class="badge badge-{{step_badge}}">{{step_result}}</span>
         </span>
    </div>

    {{#step_datatable}}
        {{#datatable}}
            <div class="mt-3 col-lg-12 text-muted" style="overflow-wrap:break-word;">
                {{{.}}}
            </div>
        {{/datatable}}
    {{/step_datatable}}

    {{#step_exception}}
        <div class="mt-3 col-lg-12 text-danger" style="overflow-wrap:break-word;">
            {{exception}}
        </div>
    {{/step_exception}}

    {{#step_output}}
        <div class="mt-3 col-lg-12 text-info" style="overflow-wrap:break-word;">
            {{#output}}
              <div>
                {{{.}}}
              </div>
            {{/output}}
        </div>
    {{/step_output}}

    {{#step_embedding_text}}
      {{#text}}
        <div class="mt-3 col-lg-12">
            {{{.}}}
        </div>
      {{/text}}
    {{/step_embedding_text}}

    {{#step_embedding_image}}
        {{#img_id}}
            <div class="mt-3 col-lg-12">
                <img id={{.}} src="" class="img-thumbnail">
            </div>
        {{/img_id}}
    {{/step_embedding_image}}

    {{#step_output_after}}
          <div class="mt-3 col-lg-12 text-info" style="overflow-wrap:break-word;">
              {{#output}}
                <div>
                  {{{.}}}
                </div>
              {{/output}}
          </div>
      {{/step_output_after}}

      {{#step_embedding_text_after}}
        {{#text}}
          <div class="mt-3 col-lg-12">
              {{{.}}}
          </div>
        {{/text}}
      {{/step_embedding_text_after}}

      {{#step_embedding_image_after}}
          {{#img_id}}
              <div class="mt-3 col-lg-12">
                  <img id={{.}} src="" class="img-thumbnail">
              </div>
          {{/img_id}}
      {{/step_embedding_image_after}}
</div>
<hr>